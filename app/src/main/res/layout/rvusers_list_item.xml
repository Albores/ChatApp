<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorSeparateBar"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/colorSeparateBar"/>
        <ImageView
            android:id="@+id/avatarcontact_iv"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/hided_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/usernamecontact_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5sp"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Alejandro" />

        <TextView
            android:id="@+id/statuscontact_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Disponible" />
        <Button
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/colorSeparateBar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorSeparateBar"/>

    </LinearLayout>

</LinearLayout>