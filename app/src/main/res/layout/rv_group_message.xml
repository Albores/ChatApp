<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/group_chat_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/group_message_content"
        android:layout_alignTop="@id/group_message_content"
        android:scaleType="fitXY"
        android:src="@drawable/chat_bubble"
        android:scaleX="-1"/>


    <LinearLayout
        android:id="@+id/group_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/rv_group_contact_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:gravity="end"
            android:text="Yoplait "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/rv_group_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:padding="3dp"
            android:text="Hola! "
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/rv_group_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="end"
            android:text="ffff "
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>



</RelativeLayout>